<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:background="@color/my_colour"
        android:inputType="textPersonName"
        android:textSize="20pt"
        android:gravity="right|center"
        android:layout_marginBottom="2pt"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        <Button
            android:id="@+id/buAC"
            android:text="AC"
            android:onClick="acEvent"
            android:background="@color/button_colour"
            android:textSize="15pt"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt">
        </Button>
            <Button
                android:id="@+id/buPlusMinus"
                android:text="+/-"
                android:onClick="numberEvent"
                android:background="@color/button_colour"
                android:textSize="15pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt">
            </Button>
            <Button
                android:id="@+id/buDivide"
                android:text="/"
                android:onClick="numberEvent"
                android:background="@color/button_colour"
                android:textSize="15pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt">
            </Button>
            <Button
                android:id="@+id/buMultiply"
                android:text="*"
                android:onClick="operatorEvent"
                android:background="@color/button_colour"
                android:textSize="15pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt">
            </Button>
    </TableRow>
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/bu9"
                android:text="9"
                android:onClick="numberEvent"
                android:background="@color/button_colour"
                android:textSize="15pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt">
            </Button>
            <Button
                android:id="@+id/bu8"
                android:text="8"
                android:onClick="numberEvent"
                android:background="@color/button_colour"
                android:textSize="15pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt">
            </Button>
            <Button
                android:id="@+id/bu7"
                android:text="7"
                android:onClick="numberEvent"
                android:background="@color/button_colour"
                android:textSize="15pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt">
            </Button>
            <Button
                android:id="@+id/buPercentage"
                android:text="%"
                android:onClick="percentEvent"
                android:background="@color/button_colour"
                android:textSize="15pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt">
            </Button>
        </TableRow>
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <Button
            android:id="@+id/bu6"
            android:text="6"
            android:onClick="numberEvent"
            android:background="@color/button_colour"
            android:textSize="15pt"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt">
        </Button>
        <Button
            android:id="@+id/bu5"
            android:text="5"
            android:onClick="numberEvent"
            android:background="@color/button_colour"
            android:textSize="15pt"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt">
        </Button>
        <Button
            android:id="@+id/bu4"
            android:text="4"
            android:onClick="numberEvent"
            android:background="@color/button_colour"
            android:textSize="15pt"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt">
        </Button>
        <Button
            android:id="@+id/buPlus"
            android:text="+"
            android:onClick="operatorEvent"
            android:background="@color/button_colour"
            android:textSize="15pt"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt">
        </Button>
    </TableRow>
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/bu3"
                android:text="3"
                android:onClick="numberEvent"
                android:background="@color/button_colour"
                android:textSize="15pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt">
            </Button>
            <Button
                android:id="@+id/bu2"
                android:text="2"
                android:onClick="numberEvent"
                android:background="@color/button_colour"
                android:textSize="15pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt">
            </Button>
            <Button
                android:id="@+id/bu1"
                android:text="1"
                android:onClick="numberEvent"
                android:background="@color/button_colour"
                android:textSize="15pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt">
            </Button>
            <Button
                android:id="@+id/buMinus"
                android:text="-"
                android:onClick="operatorEvent"
                android:background="@color/button_colour"
                android:textSize="15pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt">
            </Button>
        </TableRow>
</TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu0"
                android:text="0"
                android:onClick="numberEvent"
                android:background="@color/button_colour"
                android:textSize="15pt"
                android:layout_weight="1"
                android:layout_width="48pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt">
            </Button><Button
            android:id="@+id/buDot"
            android:text="."
            android:onClick="numberEvent"
            android:background="@color/button_colour"
            android:textSize="15pt"
            android:layout_weight="1"
            android:layout_width="50pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt">
        </Button><Button
            android:id="@+id/buEqual"
            android:text="="
            android:onClick="equalEvent"
            android:background="@color/button_colour"
            android:textSize="15pt"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="1pt">
        </Button>
        </TableRow>

    </LinearLayout>
</LinearLayout>

